@page
@model AplicacionNetRazor.Pages.Cursos.EditarModel
@{
    ViewData["Title"] = "Editar Curso";
}


<main >
    <div class="card">
        <div class="card-header" style="background-color:white !important">
            <h2 style="color:black;"> Editar Curso</h2>
        </div>

        <div class="card-body">
            <form method="post">
                <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>
                 
                <!-- Se envia campo oculto  https://youtu.be/VuMvivcLgW0?t=3489-->
                <input type="hidden" asp-for="Curso.id" />

                <div class="container" style="width:80%; ">
                    <div class="form-group" style="margin-bottom: 10px;">
                        <div class="row">
                            <div class="col-sm-3">
                                <label asp-for="Curso.NombreCurso">
                                </label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="Curso.NombreCurso" class="form-control" />
                            </div>
                            <span asp-validation-for="Curso.NombreCurso" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group" style="margin-bottom: 10px;">
                        <div class="row">
                            <div class="col-sm-3">
                                <label asp-for="Curso.CantidadClases">
                                </label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="Curso.CantidadClases" min="1" class="form-control" />
                            </div>
                            <span asp-validation-for="Curso.CantidadClases" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group" style="margin-bottom: 10px;">
                        <div class="row">
                            <div class="col-sm-3">
                                <label asp-for="Curso.Precio">
                                </label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="Curso.Precio" min="0" class="form-control" />
                            </div>
                            <span asp-validation-for="Curso.Precio" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-3 offset-sm-3">
                                <input type="submit" value="Editar" class="btn btn-primary form-control" style="text-decoration: none; border-radius: 5px;" />
                            </div>
                            <div class="col-sm-3 ">
                                <a asp-page="Index" class="btn btn-success form-control" style="text-decoration: none; border-radius: 5px;">
                                    Volver
                                </a>
                            </div>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</main>